<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:phone="http://schemas.android.com/apk/res/com.windbooter.carmeter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="650dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/car_bg_decorate" />

        <ImageView
            android:id="@+id/imageView_car_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/car_bg"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/imageView_car_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_left_normal" />

            <ImageView
                android:id="@+id/imageView_car_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_right_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/imageView_car_light_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_light_left_close" />

            <ImageView
                android:id="@+id/imageView_car_light_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_light_right_close" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>